<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.app.JuanCristobalJavier.applaescalera.model.ItemActivity"
    android:layout_margin="16dp">

    <LinearLayout
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/mujer4"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/idImag"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/taladro" />
    </LinearLayout>

    <TextView
        android:id="@+id/txItemNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lv"
        android:text="Taladro 600w"
        android:textSize="40dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txItemNombre"
        android:text="Elena Suarez"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/idTxDescrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txNombre"
        android:text="Comparto este magnífico taladro el cual apenas doy uso. Al igual que comparto, espero que los usuarios compartan otros productos. Si estas interesado ponte en contacto conmigo a través del chat. Vivo en la comunidad de la Estación en el portal 5 - 2A. "
        android:textSize="20dp" />
</RelativeLayout>
